@page "/micro-categories"

@inherits MicroCategoriesComponent

<div class="d-flex flex-column">
    <div class="p-2">
        <h1>Lista delle Categorie</h1>
    </div>
    <div class="p-2">
        <a href="/micro-category/create" class="btn btn-outline-success w-25 justify-content-end">Crea</a>
    </div>
    <div class="p-2">
        @foreach (var micro in MicroCategories)
        {
            <div class="card">
                <div class="card-header">
                    <h3>@micro.Name</h3>
                </div>
                <div class="card-body">
                    <p>Descrizione: @micro.Description</p>
                </div>
                <div class="card-footer text-muted">
                    <a href="/micro-category/edit/@micro.Id" class="btn btn-primary">Anagrafica</a>
                </div>
            </div>
        }
    </div>
</div>