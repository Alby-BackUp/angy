@page "/categories"

@inherits CategoriesComponent

<Loader Result="@IsValid">

    <div class="d-flex flex-column">
        <div class="p-2">
            <h1>Lista delle Categorie</h1>
        </div>
        <div class="p-2">
            <a href="/category/create" class="btn btn-outline-success w-25 justify-content-end">Crea</a>
        </div>
        <div class="p-2">
            @foreach (var category in Categories)
            {
                <div class="card">
                    <div class="card-header">
                        <h3>@category.Name</h3>
                    </div>
                    <div class="card-body">
                        <p>Descrizione: @category.Description</p>
                    </div>
                    <div class="card-footer text-muted">
                        <a href="/category/edit/@category.Id" class="btn btn-outline-primary w-25">Anagrafica</a>
                    </div>
                </div>
            }
        </div>
    </div>

</Loader>